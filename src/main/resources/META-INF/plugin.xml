<idea-plugin>
    <id>icu.kyakya.open-in-apps</id>
    <name>Open In External App</name>
    <vendor email="caliburn1994@gmail.com" url="https://kyakya.icu">caliburn1994</vendor>

    <description>Open files in the default external app. For more information, click: https://github.com/caliburn1994/run-in-app</description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="icu.kyakya.open.app.OpenInExternalAppAction"
                class="icu.kyakya.open.app.OpenInExternalAppAction"
                text="External Apps">
            <add-to-group group-id="RevealGroup" anchor="last"/>
            <mouse-shortcut keystroke="control button3 doubleClick" keymap="$default" />
        </action>
    </actions>
</idea-plugin>