<idea-plugin>
    <id>icu.kyakya.open-in-apps</id>
    <name>Open In External App</name>
    <vendor email="caliburn1994@gmail.com" url="https://kyakya.icu">caliburn1994</vendor>

    <description>Using it, you can open file in the default external app</description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="icu.kyakya.open.apps.OpenInExternalAppAction"
                class="icu.kyakya.open.apps.OpenInExternalAppAction"
                text="External Apps">
            <add-to-group group-id="RevealGroup" anchor="last"/>
            <mouse-shortcut keystroke="control button3 doubleClick" keymap="$default" />
        </action>
    </actions>
</idea-plugin>